<div class="container mb-5">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center my-3">Réservation n°<%= @booking.id %></h2>
      <div class="cards">
        <div class="card-booking p-3 mb-3">
          <div class="card-booking-description">
            <h5>
              Détails de la réservation
            </h5>
              <small><i class="fa-solid fa-clock"></i> <%= @booking.date.strftime("%d/%m/%Y") %> à <%= @booking.date.strftime("%H") %>h<%= @booking.date.strftime("%M") %></small><br>
              <small><i class="fa-solid fa-user-group"></i> <%= @booking.number_people %> personnes</small>
          </div>
        </div>
        <div class="card-booking-meal p-3 mb-3">
          <div class="card-booking-description">
            <h5>
              Restaurant
            </h5>
            <small><i class="fa-solid fa-location-arrow"></i> <%= @booking.meal.restaurant.name %></small><br>
            <small><i class="fa-solid fa-location-dot"></i> <%= @booking.meal.restaurant.address %></small><br>
            <small><i class="fa-solid fa-phone"></i> <%= @booking.meal.restaurant.phone %></small>
          </div>
        </div>
        <div class="card-booking-meal p-3 mb-3">
          <div class="card-booking-description">
            <h5>Plat réservé</h5>
            <%= cl_image_tag @booking.meal.photo.key, width: '100%', class: 'mb-3', style:"border-radius: 10px;" %>
            <p><%= @booking.meal.name %> - <%= @booking.meal.price %> €</p>
            <p><i class="fa-solid fa-tag"></i> <%= @booking.meal.category %></p>
            <p class="mb-0"><i class="fa-solid fa-circle-info"></i> <%= @booking.meal.description %></p>
          </div>
        </div>
      </div>
      <% if current_user.owner %>
        <%= link_to "Supprimer la réservation", my_booking_path(@booking), class: "btn btn-orange w-100", data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
      <% end %>
    </div>
  </div>
</div>
