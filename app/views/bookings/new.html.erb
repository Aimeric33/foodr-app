<div class="container mb-5">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center my-3">Nouvelle réservation</h2>
      <div class="card-booking p-3 mb-3">
        <div class="card-booking-description">
          <h5>Détails</h5>
          <small><i class="fa-solid fa-utensils"></i> <%= @meal.name %> - <%= @meal.price %>€</small><br>
          <small><i class="fa-solid fa-location-dot"></i> <%= @meal.restaurant.name %> - <%= @meal.restaurant.address %></small>
        </div>
      </div>
      <%= simple_form_for [@meal, @booking] do |f| %>
        <%= f.input :date, html5: true %>
        <%= f.input :number_people, label: "Nombre de personnes" %>
        <%= f.button :submit, "Valider ma réservation", class: "btn btn-orange w-100" %>
      <% end %>

    </div>
  </div>
</div>
