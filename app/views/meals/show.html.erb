<div class="container">
  <div class="row">
    <div class="col-12 p-0">
      <% if @restaurant.user_id == current_user.id %>
          <div class="cards m-3">
            <div class="card-meal-show p-3 mb-3">
              <%= render "shared/meal", meal: @meal%>
              <div class="btn d-flex ">
                <div class="meal-show-button">
                  <%= link_to edit_restaurant_meal_path(@restaurant, @meal) do %>
                    <button class="btn btn-orange text-dark">Modifier</button>
                  <% end %>
                </div>
                <div class="meal-show-button">
                  <%= link_to restaurant_meal_path(@restaurant, @meal), data: {turbo_method: :delete, turbo_confirm: "√ätes vous s√ªr?"} do %>
                    <button class="btn btn-orange text-dark">Supprimer</button>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
      <% else %>
        <div class="cards m-3">
          <div class="card-meal-show p-3 mb-3" style="height: 80vh">
            <%= render "shared/meal", meal: @meal%>

            <div class="d-flex justify-content-center flex-column">
              <%= render "shared/icons_likes", meal: @meal, favorite: @favorite %>
              <div class="meal-show-button">
                <%= link_to meals_path(meal: @meal.id) do %>
                  <button class="btn btn-orange text-dark">Retour</button>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <div class="cards m-3">
          <div class="card-meal-show p-3 m-3">
            <div class="d-flex" style="justify-content: space-between;">
              <h2>Avis üìù </h2>
              <% rate = @meal.reviews.map(&:rating).sum / @meal.reviews.size.to_f %>
              <% if rate = 0 %>
                <h2><%= "" %></h2>
              <% else %>
                <h2><%= "#{rate}‚≠êÔ∏è" %></h2>
              <% end %>
            </div>
          <% @meal.reviews.each do |review|%>
            <%= render "shared/review", review: review %>
          <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
