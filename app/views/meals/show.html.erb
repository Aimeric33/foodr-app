<div class="container">
  <div class="row">
    <div class="col-8">
      <% if @restaurant.user_id == current_user.id %>
        <div class="d-flex flex-row">
          <div class="p-2">
            <%= render "shared/meal", meal: @meal%>
            <div class="btn d-flex">
              <div>
                <%= link_to restaurant_meal_path(@restaurant, @meal), data: {turbo_method: :delete, turbo_confirm: "Êtes vous sûr?"} do %>
                  <i class="fa-solid fa-trash m-1" style="color:grey"></i>
                <% end %>
              </div>
              <div>
                <%= link_to edit_restaurant_meal_path(@restaurant, @meal) do %>
                  <i class="fa-solid fa-pen-to-square m-1" style="color:grey"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <%= render "shared/meal", meal: @meal%>
        <%= link_to new_meal_booking_path(@meal) do %>
          <p class="btn btn-orange w-100 mb-3 text-dark">Réserver</p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
