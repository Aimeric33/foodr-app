<div class="container">
  <div class="row">
    <div class="col-8" style="width: 100%">
      <div data-controller="filter position-relative">
        <i class="fa-solid fa-filter"  data-action="click->filter#disable">  </i>
          <%= simple_form_for(:query, url: meals_path, method: :get) do |f| %>
            <div class="boxes d-none" data-filter-target="button">
              <%= f.input_field :category, as: :check_boxes, :collection => Meal::CATEGORY, wrapper: :vertical_collection %>
              <%= submit_tag "Filtrer", class: "btn btn-orange" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row" style="height: 80vh">
    <div class="col-8" style="width: 100%">
      <% @meals.each do |meal| %>
        <div class="meal-index">
          <%= cl_image_tag meal.photo.key, class:"meal-index", alt: "food", width: 300, height: 300, crop: :fill%>
          <div class="meal-index-content">
            <%= link_to meal_path(meal), class:"text-reset text-decoration-none" do %>
              <h1><%= meal.name %></h1>
              <i class="fa-solid fa-plus icon-plus"></i>
              <p><%= meal.price %>â‚¬</p>
            <% end %>
            <%= render "shared/icons_likes", meal: meal, favorite: @favorite %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
