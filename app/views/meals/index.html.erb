<div class="container">
  <div class="row" style="height: 80vh">
    <div class="col-8" style="width: 100%">
      <% @meals.each do |meal| %>
        <div class="meal-index">
          <%= cl_image_tag meal.photo.key, class:"meal-index", alt: "food", width: 300, height: 300, crop: :fill%>
          <div class="meal-index-content">
            <%= link_to meal_path(meal), class:"text-reset text-decoration-none" do %>
              <h1><%= meal.name %></h1>
              <i class="fa-solid fa-plus icon-plus"></i>
              <p><%= meal.price %>â‚¬</p>
            <% end %>
            <%= render "shared/icons_likes", meal: meal, favorite: @favorite %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
