<!-- app/views/chatrooms/show.html.erb -->
<div class="container chatroom">
  <% if current_user.id == @chatroom.booking.meal.restaurant.user_id %>
    <h1 class="text-center"><%= @chatroom.booking.user.first_name %> <%= @chatroom.booking.user.last_name %></h1>
  <% elsif current_user.id == @chatroom.booking.user_id %>
    <h1 class="text-center"><%= @chatroom.booking.meal.restaurant.user.first_name %> <%= @chatroom.booking.meal.restaurant.user.last_name %></h1>
  <% end %>
  <div class="messages">
    <% @chatroom.messages.each do |message| %>
      <div id="message-<%= message.id %>">
        <small>
          <strong><%= message.user.first_name %> <%= message.user.last_name %> - </strong>
          <i><%= l(message.created_at, format: "%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>
</div>
<%= simple_form_for [@chatroom, @message],
  html: {class: "d-flex"} do |f|
%>
  <%= f.input :content,
    label: false,
    placeholder: "Ecrivez votre message",
    wrapper_html: {class: "flex-grow-1"}
  %>
  <%= f.submit "Valider", class: "btn btn-primary mb-3" %>
<% end %>
