
<div class="container">
  <h1>Liste de mes favoris</h1>
  <% @favorites.each do |favorite| %>
    <div class="row">
      <div class="col">
        <%= favorite.meal.name %>
      </div>
      <div class="col">
        <div class="d-flex flex-row">
          <div class="p-2">
            <%= simple_form_for favorite do |f| %>
            <% if favorite.eaten == true %>
                <%= f.input :eaten, as: :hidden, input_html: { value: false } %>
                <div >
                  <%= button_tag type: 'submit', style: 'border:none; background:none;' do %>
                    <i class="fa-solid fa-cookie" style="color:grey"></i>
                  <% end %>
                </div>
              <% else %>
              <%= f.input :eaten, as: :hidden, input_html: { value: true } %>
                <div >
                  <%= button_tag type: 'submit', style: 'border:none; background:none;' do %>
                    <i class="fa-solid fa-cookie-bite" style="color:green"></i>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
          <div class="p-2">
            <%= simple_form_for favorite do |f| %>
              <% if favorite.superlike == true %>
                <%= f.input :superlike, as: :hidden, input_html: { value: false } %>
                <div >
                  <%= button_tag type: 'submit', style: 'border:none; background:none;' do %>
                    <i class="fa-solid fa-heart" style="color:red"></i>
                  <% end %>
                </div>
              <% else %>
                <%= f.input :superlike, as: :hidden, input_html: { value: true } %>
                <div >
                  <%= button_tag type: 'submit', style: 'border:none; background:none;' do %>
                    <i class="fa-regular fa-heart" style="color:red"></i>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="d-flex flex-row">
          <div class="p-2">
            <%= link_to favorite_path(favorite) do %>
              <i class="fa-solid fa-utensils" style="color:blue"></i>
            <% end %>
          </div>
          <div class="p-2">
            <%= link_to favorite_path(favorite), data: {turbo_method: :delete, turbo_confirm: "Êtes vous sûr?"} do %>
              <i class="fa-solid fa-trash" style="color:grey"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
