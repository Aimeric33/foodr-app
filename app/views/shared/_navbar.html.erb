<div class="navbar navbar-expand-sm navbar-light fixed-bottom navbar-lewagon">
  <div class="container-fluid">
    <% if user_signed_in? %>
      <% if current_user.owner %>
        <div class="w-100">
          <ul class="nav">
            <li class="nav-item owner">
              <%= link_to restaurant_path(current_user.restaurant), class: "nav-link #{request.path.match?('/restaurants') ? 'colored' : ''}" do %>
                <i class="fa-solid fa-store"></i>
                <small>Restaurant</small>
              <% end %>
            </li>
            <li class="nav-item owner">
              <%= link_to my_bookings_path, class: "nav-link #{request.path.match?('/my/bookings') ? 'colored' : ''}" do %>
                <i class="fa-solid fa-calendar"></i>
                <small>Réservations</small>
              <% end %>
            </li>
            <li class="nav-item owner">
              <%= link_to chatrooms_path, class: "nav-link #{request.path.match?('/chatrooms') ? 'colored' : ''}" do %>
                <i class="fa-solid fa-comments"></i>
                <small>Messagerie</small>
              <% end %>
            </li>
            <li class="nav-item owner">
              <%= link_to user_path(current_user), class: "nav-link #{request.path.match?('/users') ? 'colored' : ''}" do %>
                <i class="fa-solid fa-user"></i>
                <small>Mon profil</small>
              <% end %>
            </li>
          </ul>
        </div>
      <% else %>
        <div class="w-100">
          <ul class="nav">
            <li class="nav-item user">
              <%= link_to bookings_path, class: "nav-link #{request.path.match?(/.?\/bookings.?/) ? 'colored' : ''}" do %>
                  <i class="fa-solid fa-calendar"></i>
                  <small>Réservations</small>
              <% end %>
            </li>
            <li class="nav-item user">
              <%= link_to favorites_path, class: "nav-link #{request.path.match?(favorites_path) || request.path.include?('reviews') ? 'colored' : ''}" do %>
                <i class="fa-solid fa-heart"></i>
                <small>Favoris</small>
              <% end %>
            </li>
            <li class="nav-item user">
              <%= link_to meals_path, class: "nav-link #{request.path.include?('meals') && request.path.exclude?('bookings') && request.path.exclude?('reviews')? 'colored' : ''}" do %>
                <i class="fa-solid fa-burger"></i>
                <small>Découvrir</small>
              <% end %>
            </li>
            <li class="nav-item user">
            <%= link_to chatrooms_path, class: "nav-link #{request.path.match?(chatrooms_path) ? 'colored' : ''}" do %>
                <i class="fa-solid fa-comments"></i>
                <small>Messagerie</small>
              <% end %>
            </li>
            <li class="nav-item user">
            <%= link_to user_path(current_user), class: "nav-link #{request.path.match?('users/') || request.path.include?('badges') ? 'colored' : ''}" do %>
                <i class="fa-solid fa-user"></i>
                <small>Profil</small>
              <% end %>
            </li>
        </ul>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
