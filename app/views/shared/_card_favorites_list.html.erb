<% @favorites.each do |favorite| %>
  <div class="card card-meal-list my-3 position-relative">
    <div class="d-flex position-absolute all-btns">
      <%= render "shared/button_eaten", favorite: favorite %>
      <%= render "shared/button_superlike", favorite: favorite %>
    </div>
    <div class="position-absolute btn-delete">
      <%= link_to favorite_path(favorite), data: {turbo_method: :delete} do %>
        <i class="fa-solid fa-xmark" style="color:grey"></i>
      <% end %>
    </div>
    <div class="card-image">
      <%= link_to favorite_path(favorite), class:"text-decoration-none text-reset" do %>
        <%= cl_image_tag favorite.meal.photo.key, style:"border-radius: 10px; margin: 5px", alt: "meal", width: 90, height: 90, crop: :fill %>
      <% end %>
    </div>
      <div class="card-meal-infos">
        <h4 class="card-meal-name"><%= favorite.meal.name %></h4>
        <p class="card-meal-description"><%= favorite.meal.description %></p>
        <div class="card-price-part">
          <div class="category">
            <p><%= favorite.meal.category %></p>
          </div>
          <div class="meal-price">
            <p style="margin-left:30px"><%= favorite.meal.price %>â‚¬</p>
          </div>
        </div>
      </div>
  </div>
<% end %>
