<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card-create p-3 shadow-none">
        <%= simple_form_for [@meal, @review] do |f| %>
          <%= f.input :rating, collection: Review::AUTHORIZED_RATINGS, label: "Note du plat ⭐️"  %>
          <%= f.input :content, label: "Donner un avis", placeholder: 'Très bon plat 👍', as: :text, input_html: {rows: 5, cols: 10} %>
          <%= f.submit "Valider", class: 'btn btn-orange w-100' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
