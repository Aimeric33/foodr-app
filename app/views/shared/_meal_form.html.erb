<div class="card-create p-3 shadow-none">
  <%= simple_form_for [@restaurant, @meal] do |f| %>
    <%= f.input :name, label: "Nom du plat", placeholder: 'Pizza 🍕' %>
    <%= f.input :photo, label: "Ajouter une photo de votre plat", as: :file %>
    <%= f.input :description, label: "Ajouter une description", placeholder: 'Décrivez votre plat ici 🍽', as: :text, input_html: {rows: 5, cols: 10} %>
    <%= f.input :category, label: "Catégorie de votre plat", as: :radio_buttons, :collection => Meal::CATEGORY, wrapper: :vertical_collection_inline %>
    <%= f.input :price, label: "Prix de votre plat", placeholder: 'Combien coûte ce plat? Ex. : "5", "10"' %>
    <%= f.submit "Valider", class: 'btn btn-orange w-100' %>
  <% end %>
</div>
