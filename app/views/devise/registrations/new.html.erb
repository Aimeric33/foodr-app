<div class="container">
  <div class="row">
  <div class="col-8 offset-2">
    <h2 class="text-center my-3">Créer un compte</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name,
                      label: "Prénom",
                      required: true %>
          <%= f.input :last_name,
                      label: "Nom",
                      required: true %>
          <%= f.input :address,
                      label: "Adresse",
                      required: true %>
          <%= f.input :email,
                      required: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      label: "Mot de passe",
                      required: true,
                      hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: "Confirmer le mot de passe",
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>
        <%= f.input :owner,
                      label: "Je suis restaurateur ?",
                      as: :boolean,
                      boolean_style: :inline
        <div class="form-actions">
          <%= f.button :submit, "Valider", class: "btn btn-outline-primary w-100 mb-3" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
  </div>
</div>
